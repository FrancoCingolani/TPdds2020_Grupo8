{{#partial "contenido"}}
<html>
<head>
  <title>Crear eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../main.css">
</head>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a routerLink="/home">Inicio</a>
    </li>
    <li class="breadcrumb-item active">Alta operacion Ingreso</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
      <h1>Alta Operacion Ingreso</h1>

      <form action="/evento/nuevo" method = "post">
        
        <div class="form-group">
            <label>Descripcion</label>
            <input class="form-control" name="descripcion" id="descripcion" placeholder="Ingrese una descripcion del ingreso">
        </div>

        <div>
          <label>Fecha</label><br>
          <input class="form-control" type="date" name="fecha">
          <small class="form-text text-muted">Seleccione la fecha de la operacion</small>
        </div>
        
        <div>
	        <label>Moneda</label>
	        <select class="form-control" name="moneda">
	          {{#each monedas}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione la moneda</small>
      	</div>
      
      	<div class="form-group">
            <label>Valor total</label>
            <input class="form-control" name="valor" id="valor" placeholder="Ingrese valor de la operacion">
        </div>
        
        

        <br><br>


		<input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Crear">
		<!--
        <button type="button" class="btn btn-lg btn-primary btn-block">Crear</button>
        -->
        <br>
      </form>
    </div>
  </div>
</body>
</html>

{{/partial}}
{{>layout.hbs}}

