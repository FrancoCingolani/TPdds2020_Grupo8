{{#partial "contenido"}}
<html>
<head>
  <title>Crear eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../main.css">
</head>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a routerLink="/home">Inicio</a>
    </li>
    <li class="breadcrumb-item active">Alta proyecto</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
      <h1>Alta Proyecto</h1>

      <form action="/proyecto" method = "post">
        
        <div class="form-group">
            <label>Nombre</label>
            <input class="form-control" name="nombre" id="nombre" placeholder="Ingrese el nombre del proyecto">
        </div>

         <div class="form-group">
            <label>Descripcion</label>
            <input class="form-control" name="descripcion" id="descripcion" placeholder="Ingrese una descripcion del proyecto">
        </div>
        
      
      	<div class="form-group">
            <label>Monto Asignado</label>
            <input class="form-control" name="valor" id="valor" placeholder="Ingrese el monto asignado para el proyecto">
        </div>
        
        <div>
	        <label>Ingresos</label>
	        <select multiple size="6" class="form-control" name="ingresos">
	          {{#each opIngreso}}
	            <option>{{descripcion}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione los ingresos corrrespondientes al proyecto</small>
      	</div>

        <br><br>


		<input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Crear">
		<!--
        <button type="button" class="btn btn-lg btn-primary btn-block">Crear</button>
        -->
        <br>
      </form>
    </div>
  </div>
</body>
</html>

{{/partial}}
{{>layout.hbs}}

