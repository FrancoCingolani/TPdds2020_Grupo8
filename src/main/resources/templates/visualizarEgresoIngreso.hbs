{{#partial "contenido"}}
<html>
<head>
  <title>Crear eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../main.css">
</head>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a routerLink="/home">Inicio</a>
    </li>
    <li class="breadcrumb-item active">Visualizar Operaciones</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
    
      <h1>Sus Operaciones</h1>
      <div>
        <br>
        <h4>Elija lo que quisiera visualizar</h4>
	        <select class="form-control" id="selector" name="Egreso"> <!-- NECESITA PARA ALGO TENER EL NOMBRE EGRESO?, no, era algo que habra quedado por copiar y pegar-->	        
	        	<option value="default" selected>Elija...</option>
	            <option value="i">Operaciones Ingreso</option>
	            <option value="e">Operaciones Egreso</option>
	            <option value="p">Proyectos</option>
	        </select>
      	</div>
      														
      								<!-- INGRESOS -->
	</br>
<div id="ingresos"> <!-- INICIO DIV INGRESOS -->
	<h2>Ingresos</h2>
      <table class="table table-striped">
		<thead>
		    <tr>
		      <th scope="col">ID</th>
		      <th scope="col">Fecha</th>
		      <th scope="col">Descripcion</th>
		      <th scope="col">Moneda</th>
		      <th scope="col">Monto</th>
		    </tr>
		</thead>
	  <tbody>
	  	{{#each opIng}}
	  		<tr>
		  		<th scope="row">{{id_operacion_ingreso}}</th>
			    <td>{{fechaIngreso}}</td>
			    <td>{{descripcion}}</td>
			    <td>{{id_moneda.descripcion}}</td>
			    <td>$ {{valorTotal}}</td>
			</tr>
		{{/each}}
		</tbody>
	</table>
</div> <!-- FIN  DIV INGRESOS -->
									<!-- EGRESOS -->

	<div id="egresos"> <!-- INICIO DIV EGRESOS -->
	<h4>Elija la clasificaci&oacute;n</h4>
        <select class="form-control" id="selectorClas" name="selClas">       
        	<option value="default" selected>Todos</option>
        	{{#each clasificaciones}}
	            <option value="{{id_clasificacion}}">{{descripcion}}</option>
	        {{/each}}
        </select>
        </br>
        <a id="filtrar" class="btn btn-primary">Filtrar</a>	 	
		</br></br>
		{{#each opEg}}
			<h2>Egreso #{{id_operacion_egreso}}</h2>
				<table class="table table-striped">
					<thead>
					    <tr>
					      <th scope="col">Organizaci&oacute;n</th>
					      <th scope="col">Moneda</th>
					   	  <th scope="col">Valor Total</th>
					      <th scope="col">Fecha</th>
					    </tr>
					</thead>
					  
					<tbody>
						<tr>
					      <td>{{organizacion.nombreFicticio}}</td>
					      <td>{{id_moneda.descripcion}}</td>				     
					      <td>{{valorTotal}}</td>
					      <td>{{fecha}}</td>
					    </tr>				  
				
				<tr><th scope="col">Items Asociados</th></tr>
				    <tr>
				      <th scope="col">Descripci&oacute;n</th>
				      <th scope="col">Clasificaci&oacute;n</th>
				      <th scope="col">Valor</th>
				      <th scope="col">Cantidad</th>
				    </tr>

				{{#each items}}
					<tr>
				      <td>{{descripcion}}</td>
				      <td>{{clasificacion.descripcion}}</td>
				      <td>{{valor}}</td>
				      <td>{{cantidad}}</td>
				    </tr>		 
				{{/each}}
			</tbody>
		</table>
	{{/each}}

</div> <!-- FIN DIV EGRESOS-->
								<!-- PROYECTO -->

	<div id="proyectos"> <!-- INICIO DIV PROYECTOS -->
	<h2>Proyectos</h2>
      <table class="table table-striped">
		    {{#each proyecto}}
		    	
		    	<thead>
		    		<tr>
				      <th scope="col">Descripcion</th>
				      <th scope="col">Monto Asignado</th>
				      <th scope="col">Director</th>
				    </tr>
				    
				    <tr>
					    <td>{{descripcion}}</td>
					    <td>$ {{montoAsignado}}</td>
					    <td>{{director.nombre}}</td>
					</tr>
					
				    <tr>
				      <th scope="col">Descripcion Subsidio</th>
				      <th scope="col">Monto</th>
				      <th scope="col">ID Subsidio</th>
				    </tr>
				  </thead>
				  <tbody>
		    	{{#each subsidios}}
			  		<tr>
					    <td>{{descripcion}}</td>
					    <td>$ {{valorTotal}}</td>
					    <td>{{id_operacion_ingreso}}</td>
					</tr>
				{{/each}}
			{{/each}}
		  </tbody>
	</table>
</div> <!-- FIN DIV PROYECTOS -->
    </div>
  </div>
</body>
</html>

{{/partial}}
{{>layout.hbs}}

<!-- JS para mostrar/ocultar lo que se pida en el visualizador-->
<script src="/js/visualizadorStyle.js"></script>


