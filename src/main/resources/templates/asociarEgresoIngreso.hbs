{{#partial "contenido"}}
<html>
<head>
  <title>Crear eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../main.css">
</head>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a routerLink="/home">Inicio</a>
    </li>
    <li class="breadcrumb-item active">Asociar Operaciones</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
      <h1>Asocie sus operaciones</h1>

       <form action="/evento/nuevo" method = "post">
    
        <div>
          <h4>Elija la operacion que quiera asociar</h4>
	        <select class="form-control" name="filtrito" id="selector">
	         	<option value="default" selected>Elija...</option>
	            <option value="i">Operaciones Ingreso</option>
	            <option value="e">Operaciones Egreso</option>
	            <option value="p">Proyectos</option>
	        </select>
      	</div>
      </form>
      
      <div id="egresos">
       <form action="/asociar/egresos" method = "post">
    		<br>
        	<div>
       	    <h4>asociar egresos</h4>
	        <label>Egreso</label>
	        <select multiple size="6" class="form-control" name="egreso">
	          	{{#each opEg}}
            		<option value={{id_operacion_egreso}}>Fecha: {{fecha}} por monto: {{valorTotal}}</option>
          		{{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione los egresos que desee asociar</small>
      	</div>	
      	<div>
	        <label>Orden</label>
	        <select class="form-control" name="orden" id="orden">
	         	<option value="default" selected>Elija...</option>
	            <option value="1">Por fecha</option>
	            <option value="2">Por valor</option>
	        </select>
      	</div>
		
        <br>
        <input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Asociar">
		<!--<a id="asociar" class="btn btn-primary">Asociar</a>-->	
        <br>
        
      </form>
      </div>  	<!--   FIN DIV EGRESO     -->
      
      
      <div id="ingresos">
       <form action="/asociar/ingresos" method = "post">
    		<br>
        	<div>
       	    <h4>asociar ingresos</h4>
	        <label>Ingreso</label>
	        <select multiple size="6" class="form-control" name="ingreso">
	          	{{#each opIng}}
            		<option value={{id_operacion_ingreso}}>{{descripcion}}</option>
          		{{/each}}
	        </select>
	       <small class="form-text text-muted">Seleccione los ingresos que desee asociar</small>
      	</div>	
      	<div>
	        <label>Orden</label>
	        <select class="form-control" name="orden" id="orden">
	         	<option value="default" selected>Elija...</option>
	            <option value="1">Por fecha</option>
	            <option value="2">Por valor</option>
	        </select>
      	</div>

        <br>
        <input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Asociar">
		<!--<a id="asociar" class="btn btn-primary">Asociar</a>-->	
        <br>
        </form>
    </div>  	<!--   FIN DIV INGRESO     -->   
      
      
      <div id="proyectos">
       <form action="/asociar/proyectos" method = "post">
    		<br>
        	<div>
       	    <h4>Asocie un Proyecto a uno o varios ingresos</h4>
	        <label>Proyecto</label>
	        <select class="form-control" name="Proyeto3">
	          {{#each proyecto}}
	            <option>{{descripcion}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione un proyecto</small>
      	</div>	
      	    	
      	<div>
	        <label>Ingresos</label>
	        <select multiple size="6" class="form-control" name="ingreso">
	          	{{#each opIng}}
            		<option value={{id_operacion_ingreso}}>{{descripcion}}</option>
          		{{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione uno o mas ingresos que desee asociar</small>
      	</div>

      	<br>
        <input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Asociar">
		<!--<a id="asociar" class="btn btn-primary">Asociar</a>-->	
        <br>
      </form>
      </div>  	<!--   FIN DIV PROYECTO     -->
      
      
      
    </div>
  </div>
</body>
</html>

{{/partial}}
{{>layout.hbs}}
<script src="/js/asociarStyle.js"></script> 
