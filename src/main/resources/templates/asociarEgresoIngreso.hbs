{{#partial "contenido"}}
<html>
<head>
  <title>Crear eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../main.css">
</head>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a routerLink="/home">Inicio</a>
    </li>
    <li class="breadcrumb-item active">Asociar Operaciones</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
      <h1>Asocie sus operaciones</h1>

       <form action="/evento/nuevo" method = "post">
    
        <div>
          <h4>Elija la operacion que quiera asociar</h4>
	        <select class="form-control" name="filtrito">
	         <option selected>Elija...</option>
	            <option>Operaciones Ingreso</option>
	            <option>Operaciones Egreso</option>
	            <option>Proyecto</option>
	        </select>
      	</div>
      </form>
      
      <div id="egresos">
       <form action="/evento1/nuevo" method = "post">
    		<br>
        	<div>
       	    <h4>Asocie un egreso a uno o varios ingresos</h4>
	        <label>Egreso</label>
	        <select class="form-control" name="Egreso1">
	          {{#each egreso}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione un egreso</small>
      	</div>	
      	<div>
	        <label>Ingresos</label>
	        <select class="form-control" name="Ingresos1">
	          {{#each ingreso}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione uno o mas ingresos que desee asociar</small>
      	</div>

        <br>
		<input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Crear">
        <br>
        
      </form>
      </div>  	<!--   FIN DIV EGRESO     -->
      
      
      <div id="ingresos">
       <form action="/evento2/nuevo" method = "post">
    		<br>
        	<div>
       	    <h4>Asocie un ingreso a uno o varios egresos</h4>
	        <label>Ingreso</label>
	        <select class="form-control" name="Ingreso2">
	          {{#each ingreso}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione un ingreso</small>
      	</div>	
      	<div>
	        <label>Egresos</label>
	        <select class="form-control" name="Egresos2">
	          {{#each egreso}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione uno o mas egresos que desee asociar</small>
      	</div>

        <br>
		<input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Crear">
        <br>
        
      </form>
    </div>  	<!--   FIN DIV INGRESO     -->   
      
      
      <div id="proyectos">
       <form action="/evento3/nuevo" method = "post">
    		<br>
        	<div>
       	    <h4>Asocie un Proyecto a uno o varios ingresos</h4>
	        <label>Proyecto</label>
	        <select class="form-control" name="Proyeto3">
	          {{#each proyecto}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione un proyecto</small>
      	</div>	
      	<div>
	        <label>Ingresos</label>
	        <select class="form-control" name="Ingresos3">
	          {{#each ingreso}}
	            <option>{{this}}</option>
	          {{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione uno o mas ingresos que desee asociar</small>
      	</div>

        <br>
		<input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Crear">
        <br>
        
      </form>
      </div>  	<!--   FIN DIV PROYECTO     -->
      
      
      
    </div>
  </div>
</body>
</html>

{{/partial}}
{{>layout.hbs}}
