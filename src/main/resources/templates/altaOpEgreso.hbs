{{#partial "contenido"}}
<html>
<head>
  <title>Crear eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../main.css">
</head>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a routerLink="/home">Inicio</a>
    </li>
    <li class="breadcrumb-item active">Alta operacion egreso</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
      <h1>Alta operacion egreso</h1>

      <form action="/evento/nuevo" method = "post">
        
        <div class="form-group">
            <label>Proveedor</label>
            <input class="form-control" name="proveedor" id="proveedor" placeholder="Ingrese el cuit del proveedor">
        </div>

        <div>
          <label>Fecha</label><br>
          <input class="form-control" type="date" name="fecha">
          <small class="form-text text-muted">Seleccione la fecha de la operacion</small>
        </div>
        
        <div>
	        <label>Moneda</label>
	        <select class="form-control" name="moneda">
            	{{#each this}}
            		<option value={{id_moneda}}>{{descripcion}}</option>
          		{{/each}}
	        </select>
	        <small class="form-text text-muted">Seleccione la moneda</small>
      	</div>
      
      	<div class="form-group">
            <label>Valor total</label>
            <input class="form-control" name="valor" id="valor" placeholder="Ingrese valor de la operacion">
        </div>
        
        <div>
	        <label>Medio de pago</label>
	        <select class="form-control" name="medioDePago">
	          	<option value="1">Medio de pago 1</option> 
  				<option value="2">Medio de pago 2</option>
  				<option value="3">Medio de pago 3</option>
	        </select>
	        <small class="form-text text-muted">Seleccione el medio de pago</small>
      	</div>
      	
      	<div>
	        <label>Comprobante</label>
	        <select class="form-control" name="comprobante">
	          	<option value="1">Comprobante 1</option> 
  				<option value="2">Comprobante 2</option>
  				<option value="3">Comprobante 3</option>
	        </select>
	        <small class="form-text text-muted">Seleccione los comprobantes para la operacion</small>
      	</div>
      	
      	<div>
	        <label>Items</label>
	        <select class="form-control" name="item">
	          	<option value="1">Item 1</option> 
  				<option value="2">Item 2</option>
  				<option value="3">Item 3</option>
	        </select>
	        <small class="form-text text-muted">Seleccione los items de la operacion</small>
      	</div>
      	
      	<div class="form-group">
            <label>Organizacion</label>
            <input class="form-control" name="organizacion" id="organizacion" placeholder="Ingrese el nombre de la organizacion">
        </div>
        
        

        <br><br>


		<input type="submit" class="btn btn-lg btn-primary btn-block" placeholder="Crear">
		<!--
        <button type="button" class="btn btn-lg btn-primary btn-block">Crear</button>
        -->
        <br>
      </form>
    </div>
  </div>
</body>
</html>

{{/partial}}
{{>layout.hbs}}

